<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Filtered Providers</title>
</head>
<body>
    <h1>Filtered Providers by Specialty</h1>
    <table border="1">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Specialty</th>
            </tr>
        </thead>
        <tbody>
            <% if (providers.length > 0) { %>
                <% providers.forEach(provider => { %>
                    <tr>
                        <td><%= provider.first_name %></td>
                        <td><%= provider.last_name %></td>
                        <td><%= provider.provider_specialty %></td>
                    </tr>
                <% }) %>
            <% } else { %>
                <tr>
                    <td colspan="3">No providers found.</td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>
